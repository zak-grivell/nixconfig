# enter leader mode
f18 :: leader

# =====================
# leader MODE
# =====================
:: leader

# exit mode
leader < esc        ; skhd -k "escape"
leader < backspace  ; skhd -k "escape"

# reset workspace
leader < r : aerospace new-window

# close apps
leader < x : aerospace close --quit-if-last-window

# changing focus
leader < h : aerospace focus left
leader < j : aerospace focus down
leader < k : aerospace focus up
leader < l : aerospace focus right

# moving windows between workspaces
leader < y : aerospace yank
leader < p : aerospace paste

# relocating in workspace
leader < shift - j : aerospace move down
leader < shift - k : aerospace move up
leader < shift - h : aerospace move left
leader < shift - l : aerospace move right

# Apps
leader < t : open -a "Ghostty.app"
leader < b : open -a "Zen.app"
leader < d : open -a "Finder.app"
leader < e : open -a "Zed.app"
leader < n : open -a "Obsidian.app"

# New app window
leader < shift - t : open -a "Ghostty.app" -n
leader < shift - b : open -a "Zen.app" -n
leader < shift - d : open -a "Finder.app" -n
leader < shift - e : open -a "Zed.app" -n

# layout / fullscreen
leader < u : aerospace layout floating tiling
leader < f : aerospace fullscreen

# sizing
leader < - : aerospace resize smart -100
leader < = : aerospace resize smart +100

# workspace moving
leader < o : aerospace workspace next --wrap-around
leader < i : aerospace workspace prev --wrap-around

# config settings
leader < s : sketchybar --reload
leader < c : aerospace reload-config
leader < a : aerospace layout accordion horizontal vertical
leader < g : aerospace layout tiles horizontal vertical

# workspaces 1â€“9
leader < 1 : aerospace workspace 1
leader < 2 : aerospace workspace 2
leader < 3 : aerospace workspace 3
leader < 4 : aerospace workspace 4
leader < 5 : aerospace workspace 5
leader < 6 : aerospace workspace 6
leader < 7 : aerospace workspace 7
leader < 8 : aerospace workspace 8
leader < 9 : aerospace workspace 9
